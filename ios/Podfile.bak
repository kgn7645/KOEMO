# Podfile for KOEMO iOS App

platform :ios, '15.0'
use_frameworks!

target 'KOEMO' do
  # WebRTC SDK for voice calls - temporarily disabled for initial setup
  # pod 'SkyWay', '~> 4.0'
  
  # Networking
  pod 'Alamofire', '~> 5.8'
  
  # JSON Parsing
  pod 'SwiftyJSON', '~> 5.0'
  
  # Socket.IO for real-time communication
  pod 'Socket.IO-Client-Swift', '~> 16.0'
  
  # UI Components and Layout
  pod 'SnapKit', '~> 5.6'
  
  # Keychain Services
  pod 'KeychainAccess', '~> 4.2'
  
  # WebRTC for voice calls
  pod 'WebRTC-lib'
  
  # Testing Dependencies
  # target 'KOEMOTests' do
  #   inherit! :search_paths
  #   pod 'Quick', '~> 7.0'
  #   pod 'Nimble', '~> 12.0'
  #   pod 'OHHTTPStubs/Swift', '~> 9.1'
  # end
  
  # target 'KOEMOUITests' do
  #   inherit! :search_paths
  # end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      
      # Fix code signing issues for device builds
      config.build_settings['EXPANDED_CODE_SIGN_IDENTITY'] = ""
      config.build_settings['CODE_SIGNING_REQUIRED'] = "NO"
      config.build_settings['CODE_SIGNING_ALLOWED'] = "NO"
      
      # Fix Starscream compilation issues with newer Xcode
      config.build_settings['SWIFT_VERSION'] = '5.0'
      config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = "YES"
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = "NO"
      
      # Fix Swift compilation warnings
      if target.name == 'Starscream'
        config.build_settings['SWIFT_SUPPRESS_WARNINGS'] = "YES"
        config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = "YES"
      end
    end
  end
end