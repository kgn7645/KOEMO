# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/koemo_development
MONGODB_TEST_URI=mongodb://localhost:27017/koemo_test

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=86400

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=30d

# WebRTC Configuration (SkyWay)
SKYWAY_API_KEY=your-skyway-api-key
SKYWAY_SECRET_KEY=your-skyway-secret-key
SKYWAY_APP_ID=your-skyway-app-id

# CORS Configuration
CLIENT_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001,https://koemo.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Apple In-App Purchase
APPLE_APP_SECRET=your-apple-app-shared-secret

# Push Notifications
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_AUTH_KEY_PATH=./certs/AuthKey.p8
APNS_PRODUCTION=false

# Monitoring & Analytics
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_MATCHING=true
ENABLE_CALLS=true
ENABLE_MESSAGES=true
MAINTENANCE_MODE=false

# External Services
EXTERNAL_API_TIMEOUT=10000

# Development
DEBUG=koemo:*